<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Product Overview</title>
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel="stylesheet" type="text/css" href="/css/products.css">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Rock+Salt" />
</head>

<body>
    <div class="products">
        <div class="productTitle">
            <h1>Products</h1>
        </div>
        <div class="product-grid">
            <% products.forEach( p =>  { %>
            <div>
                <div class="imgBorder">
                    <a href="/products/product/<%= p.name %>"><img class="product-image" src="images/<%= p.name %>.jpg"></a>
                    <div class="belowpic">
                    <h2> <%= p.name %></h2>
                        <a href="/wishlist"><img class="wishlistIcon" src="images/wishList.png"></a>
                    </div>
            </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>

</html>