<head>
    <meta charset="utf-8">
    <title>User detailed view</title>
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel="stylesheet" type="text/css" href="/css/cart.css">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Rock+Salt" />
    <link href="//fonts.googleapis.com/css2?family=Raleway" rel="stylesheet">
</head>

<h2>Users Table</h2>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(user => { %>
        <tr>
            <td><a href="<%= `/users/${user._id}` %>">
                <%= user.fullName %>
            </a></td>
            <td><%= user.email %></td>
            <td>
                <a href="<%=`/users/${user._id}/edit` %>">                            <button class="edit">Edit</button>
                </a>
            </td>
            <td>
                <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
                   onclick="return confirm('Are you sure you want to delete this user?')" a>
                    <img class="bin-subscribers" src="/images/trash.png" />
                </a>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>