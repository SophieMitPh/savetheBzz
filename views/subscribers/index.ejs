<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Our subscribers</title>
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel="stylesheet" type="text/css" href="/css/cart.css">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Rock+Salt" />
    <link href="//fonts.googleapis.com/css2?family=Raleway" rel="stylesheet">
</head>

<body class="body">
    <div class="main">
        <div class="pageTitle">
            <h1>Our subscribers</h1>
        </div>
        <div class="cart-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Full name</th>
                        <th>Email</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% subscribers.forEach(subscriber => { %>
                    <tr>
                        <td>
                            <a href="<%= `/subscribers/${subscriber._id}` %>">
                                <%= subscriber.fullName %>
                            </a>
                        </td>
                        <td>
                            <%= subscriber.email %>
                        </td>
                        <td>
                            <a href="<%=`/subscribers/${subscriber._id}/edit`%>">
                                <button class="edit">Edit</button>
                            </a>
                        </td>
                        <td>
                            <a href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>"
                                onclick="return confirm('Are you sure you want to delete this record?')" a>
                                <img class="bin" src="/images/trash.png" />
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>